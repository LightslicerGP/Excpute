r0 = 0
r1 = 1
r2 = 2
r3 = 3
r4 = 4
r5 = 5
r6 = 6
r7 = 7

rSP = 5
rFlags = 6
rPC = 7

r_col = 0
g_col = 1
b_col = 2
x_coord = 3
y_coord = 4
set_px = 5
fill_display = 6
push_buffer = 7

on = 255
off = 0

init:


loop:
    ldi r0 off
    spd r0 r_col
    spd r0 g_col
    spd r0 b_col
    spd fill_display # clear display

    ldi r0 on
    spd r0 r_col
    spd r0 g_col
    spd r0 b_col

    pti 9 r0
    spd r0 x_coord

    pti 10 r0
    spd r0 y_coord

    spd set_px

    spd push_buffer
    jmp loop