r0 = 0
r1 = 1
r2 = 2
r3 = 3
r4 = 4
rSP = 5
rFlags = 6
rPC = 7

r_col = 0
g_col = 1
b_col = 2
x_coord = 3
y_coord = 4
set_px = 5
fill_display = 6
push_buffer = 7

init:
    ldi r0 10
    spd r0 x_coord
    ldi r0 245
    spd r0 y_coord

loop:
    pti 0 r0
    ldi r1 0b00000001
    xor r0 r1 r0
    jiz r0 display
    
    ldi r0 0
    spd r0 r_col
    spd r0 g_col
    spd r0 b_col
    spd fill_display

display_done:
    spd push_buffer
    jmp loop



display:
    ldi r0 0
    spd r0 r_col
    ldi r0 128
    spd r0 g_col
    ldi r0 255
    spd r0 b_col

    spd r0 set_px
    jmp display_done




delay:
    psh r4
    ldi r4 255
delay_loop:
    dec r4
    jiz r4 exit_delay
    jmp delay_loop
exit_delay:
    pop r4
    rtn