r0 = 0
r1 = 1
r2 = 2
r3 = 3
r4 = 4
rSP = 5
rFlags = 6
rPC = 7

r_col = 0
g_col = 1
b_col = 2
x_coord = 3
y_coord = 4
set_px = 5
fill_display = 6
push_buffer = 7

on = 255
off = 0

yes = 1
no = 0

init:

loop:

    # if !mouseDown, jump to loop
    pti 8 r0
    ldi r1 0b10000000
    and r0 r1 r0 # r0 has mouseDown
    xor r0 r1 r0 # r0 has !mouseDown
    jiz r0 loop

    # Clear display buffer
    ldi r0 off
    spd r0 r_col
    spd r0 g_col
    spd r0 b_col
    spd fill_display

    # determine step direction

    # If cursorX >= originX:
    pti 9 r1 # r1 has cursorX
    ldi r2 0 # memory address of originX
    lod r2 r2 # r2 has originX
    cmp r1 r2


    # If cursorY >= originY:
    pti 10 r3 # r3 has cursorY
    ldi r4 0 # memory address of originY
    lod r4 r4 # r4 has originY

    jmp loop


# I give up. Im moving on to v3.1! Cya there!