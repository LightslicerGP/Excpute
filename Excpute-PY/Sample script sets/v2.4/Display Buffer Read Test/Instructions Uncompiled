r0 = 0
r1 = 1
r2 = 2
r3 = 3
r4 = 4
r5 = 5
r6 = 6
r7 = 7

rSP = 5
rFlags = 6
rPC = 7

r_col = 0
g_col = 1
b_col = 2
x_coord = 3
y_coord = 4
set_px = 5
fill_display = 6
push_buffer = 7

on = 255
off = 0

init:
    ldi r0 128
    spd r0 x_coord
    spd r0 y_coord
    
    ldi r0 16
    spd r0 r_col
    ldi r0 32      # 5
    spd r0 g_col
    ldi r0 64
    spd r0 b_col

    spd r0 r_col 1
    spd r1 g_col 1 # 10
    spd r2 b_col 1

    spd set_px

    spd r0 r_col 1
    spd r1 g_col 1
    spd r2 b_col 1 # 15

    spd push_buffer

    spd r0 r_col 1
    spd r1 g_col 1
    spd r2 b_col 1